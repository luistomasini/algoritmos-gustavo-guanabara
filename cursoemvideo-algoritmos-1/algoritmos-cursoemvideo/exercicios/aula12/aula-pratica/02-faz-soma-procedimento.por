programa
{
	inteiro x, y

	funcao soma (inteiro a, inteiro b)
	{
		escreva("Recebi o valor " + a + "\n")
		escreva("Recebi o valor " + b + "\n")
		escreva("A soma entre os dois é ", a + b)
	}
	
	funcao inicio()
	{
		x = 5
		y = 3
		soma(x,y)
	}
}
